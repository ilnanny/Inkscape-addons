from enaml.widgets.api import Container, Label, ObjectCombo


enamldef DMPLConfigView(Container):
    attr model
    Label:
        text = "Mode"
    ObjectCombo:
        items  = list(model.get_member('mode').items)
        selected := model.mode


enamldef CAMMConfigView(Container):
    attr model
    Label:
        text = "Mode"
    ObjectCombo:
        items  = list(model.get_member('mode').items)
        selected := model.mode
